{
	"name": "preact-realworld-example-app",
	"version": "0.1.2",
	"private": true,
	"scripts": {
		"start": "wmr",
		"build": "wmr build --prerender",
		"build:visualize": "wmr build --prerender --visualize",
		"serve": "wmr serve",
		"lint": "eslint '{src,test}/**/*.{ts,tsx}' --fix && prettier '{src,test}/**/*{ts,tsx}' --write",
		"test": "cross-env TZ=America/New_York jest --maxWorkers=50%",
		"test:ci": "cross-env TZ=America/New_York jest --runInBand"
	},
	"alias": {
		"react": "preact/compat",
		"react-dom": "preact/compat"
	},
	"dependencies": {
		"preact": "^10.5.13",
		"preact-iso": "^1.1.0",
		"snarkdown": "^2.0.0",
		"ts-api-toolkit": "^2.0.15",
		"zustand": "^3.4.1"
	},
	"devDependencies": {
		"@testing-library/jest-dom": "^5.11.10",
		"@testing-library/preact": "^2.0.1",
		"@types/history": "^4.7.3",
		"@types/jest": "^26.0.22",
		"@typescript-eslint/eslint-plugin": "^4.18.0",
		"@typescript-eslint/parser": "^4.18.0",
		"cross-env": "^7.0.2",
		"eslint": "^7.22.0",
		"eslint-config-preact": "^1.1.3",
		"husky": "^5.2.0",
		"jest": "^26.6.3",
		"lint-staged": "^10.5.4",
		"msw": "^0.28.0",
		"mockjs": "^1.1.0",
		"node-fetch": "^2.6.1",
		"preact-render-to-string": "^5.1.17",
		"prettier": "^2.2.1",
		"ts-jest": "^26.5.4",
		"typescript": "^4.2.3",
		"wmr": "^1.5.1"
	},
	"lint-staged": {
		"**/*.{js,jsx,ts,tsx,json}": [
			"prettier --write"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"eslintConfig": {
		"parser": "@typescript-eslint/parser",
		"extends": [
			"preact",
			"plugin:@typescript-eslint/recommended"
		],
		"rules": {
			"@typescript-eslint/explicit-module-boundary-types": "off",
			"@typescript-eslint/no-explicit-any": "off",
			"@typescript-eslint/no-unused-vars": ["warn", { "varsIgnorePattern": "^_.*" }],
			"react/no-danger": "off"
		}
	},
	"prettier": {
		"singleQuote": true,
		"trailingComma": "none",
		"useTabs": true,
		"printWidth": 120,
		"arrowParens": "avoid"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"testPathIgnorePatterns": [
			"<rootDir>/{dist,src}"
		],
		"setupFilesAfterEnv": [
			"<rootDir>/test/setup-test.ts"
		],
		"collectCoverageFrom": [
			"<rootDir>/src/**/*.{ts,tsx}",
			"!<rootDir>/src/types/**/*"
		],
		"moduleNameMapper": {
			"^react$": "preact/compat",
			"^react-dom/test-utils$": "preact/test-utils",
			"^react-dom$": "preact/compat"
		}
	}
}
