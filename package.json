{
  "name": "preact-realworld-example-app",
  "version": "0.1.2",
  "description": "> ### [Preact X](https://github.com/developit/preact) codebase containing real world examples (typescript, preact-hooks, preact-router, fetch, etc) that adheres to the [RealWorld](https://github.com/gothinkster/realworld) spec and API.",
  "keywords": [
    "realworld",
    "preact",
    "typescript"
  ],
  "author": "mutoe <mutoe@foxmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/mutoe/preact-realworld-example-app#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mutoe/preact-realworld-example-app.git"
  },
  "bugs": {
    "url": "https://github.com/mutoe/preact-realworld-example-app/issues"
  },
  "main": "src/index.tsx",
  "scripts": {
    "start": "webpack-dev-server",
    "build": "cross-env NODE_ENV=production webpack",
    "lint": "eslint src/**/*.{tsx,ts}",
    "test": "jest",
    "analyzer": "webpack --profile --json > stats.json && webpack-bundle-analyzer stats.json dist -s gzip"
  },
  "dependencies": {
    "history": "^4.10.1",
    "preact": "^10.1.0",
    "preact-router": "^3.1.0"
  },
  "devDependencies": {
    "@types/enzyme": "^3.10.3",
    "@types/history": "^4.7.3",
    "@types/jest": "^25.1.4",
    "@types/jsdom": "^16.1.0",
    "@types/mockjs": "^1.0.2",
    "@typescript-eslint/eslint-plugin": "^2.8.0",
    "@typescript-eslint/parser": "^2.8.0",
    "cross-env": "^7.0.2",
    "dotenv-webpack": "^1.7.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-preact-pure": "^2.2.0",
    "eslint": "^6.6.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^23.0.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-standard": "^4.0.1",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "jest-serializer-html-string": "^1.0.1",
    "jsdom": "^16.2.0",
    "lint-staged": "^10.0.8",
    "mockjs": "^1.1.0",
    "preact-render-to-string": "^5.1.1",
    "prettier": "^1.19.1",
    "ts-jest": "^25.2.1",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.2",
    "webpack": "^4.41.2",
    "webpack-bundle-analyzer": "^3.6.0",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.9.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": "eslint --fix"
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "settings": {
      "react": {
        "pragma": "h",
        "version": "default"
      }
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "project": "./tsconfig.json",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "extends": [
      "standard",
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:jest/recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "promise/param-names": "off",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-non-null-assertion": "off",
      "react/self-closing-comp": "error",
      "react/prop-types": "off",
      "react/display-name": "off",
      "react/no-unescaped-entities": "off"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/dist"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/setup-test.ts"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.{ts,tsx}",
      "!<rootDir>/src/types/**/*"
    ],
    "snapshotSerializers": [
      "jest-serializer-html-string"
    ]
  }
}
