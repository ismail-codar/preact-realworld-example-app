{
	"name": "preact-realworld-example-app",
	"private": true,
	"scripts": {
		"start": "wmr",
		"build": "wmr build --prerender",
		"build:visualize": "wmr build --prerender --visualize",
		"serve": "wmr serve",
		"lint": "eslint 'public/**/*.{ts,tsx}' --fix && prettier 'public/**/*{ts,tsx}' --write"
	},
	"alias": {
		"react": "preact/compat",
		"react-dom": "preact/compat"
	},
	"dependencies": {
		"preact": "^10.5.13",
		"preact-iso": "^1.1.0",
		"snarkdown": "^2.0.0",
		"ts-api-toolkit": "^2.0.15",
		"zustand": "^3.4.1"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^4.18.0",
		"@typescript-eslint/parser": "^4.18.0",
		"eslint": "^7.22.0",
		"eslint-config-preact": "^1.1.3",
		"husky": "^5.2.0",
		"lint-staged": "^10.5.4",
		"preact-render-to-string": "^5.1.17",
		"prettier": "^2.2.1",
		"typescript": "^4.2.3",
		"wmr": "^1.5.1"
	},
	"lint-staged": {
		"**/*.{js,jsx,ts,tsx,json}": [
			"prettier --write"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"eslintConfig": {
		"parser": "@typescript-eslint/parser",
		"extends": [
			"preact",
			"plugin:@typescript-eslint/recommended"
		],
		"rules": {
			"@typescript-eslint/explicit-module-boundary-types": "off",
			"@typescript-eslint/no-explicit-any": "off",
			"@typescript-eslint/no-unused-vars": ["warn", { "varsIgnorePattern": "^_.*" }],
			"react/no-danger": "off"
		}
	},
	"prettier": {
		"singleQuote": true,
		"trailingComma": "none",
		"useTabs": true,
		"printWidth": 120,
		"arrowParens": "avoid"
	}
}
