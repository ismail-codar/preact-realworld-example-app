{
  "name": "preact-realworld-example-app",
  "version": "0.1.0",
  "description": "> ### [Preact](https://github.com/developit/preact) codebase containing real world examples (CRUD, auth, advanced patterns, etc) that adheres to the [RealWorld](https://github.com/gothinkster/realworld) spec and API.",
  "keywords": [
    "realworld",
    "preact"
  ],
  "author": "mutoe <mutoe@foxmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/mutoe/preact-realworld-example-app#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mutoe/preact-realworld-example-app.git"
  },
  "bugs": {
    "url": "https://github.com/mutoe/preact-realworld-example-app/issues"
  },
  "main": "src/index.tsx",
  "scripts": {
    "start": "webpack-dev-server",
    "build": "webpack --mode=production",
    "lint": "eslint src/**/*.{tsx,ts}",
    "test": "jest",
    "coveralls": "cat ./coverage/lcov.info | coveralls"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "history": "^4.10.1",
    "preact": "^10.1.0",
    "preact-router": "^3.1.0"
  },
  "devDependencies": {
    "@types/enzyme": "^3.10.3",
    "@types/history": "^4.7.3",
    "@types/jest": "^24.0.23",
    "@types/jsdom": "^12.2.4",
    "@types/mockjs": "^1.0.2",
    "@typescript-eslint/eslint-plugin": "^2.8.0",
    "@typescript-eslint/parser": "^2.8.0",
    "coveralls": "^3.0.9",
    "dotenv-webpack": "^1.7.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-preact-pure": "^2.2.0",
    "eslint": "^6.6.0",
    "eslint-plugin-jest": "^23.0.4",
    "eslint-plugin-react": "^7.16.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "jest-serializer-html-string": "^1.0.1",
    "jsdom": "^15.2.1",
    "mockjs": "^1.1.0",
    "preact-render-to-string": "^5.1.1",
    "ts-jest": "^24.1.0",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.2",
    "webpack": "^4.41.2",
    "webpack-bundle-analyzer": "^3.6.0",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.9.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint --fix"
    }
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "settings": {
      "react": {
        "pragma": "h",
        "version": "default"
      }
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "project": "./tsconfig.json",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": [
      "@typescript-eslint",
      "jest"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:jest/recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "semi": "off",
      "indent": [
        "error",
        2
      ],
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "react/self-closing-comp": [
        "error"
      ],
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-non-null-assertion": "off",
      "react/no-unescaped-entities": "off"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/src/setup-test.ts"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.{ts,tsx}",
      "!<rootDir>/src/types/**/*"
    ],
    "snapshotSerializers": [
      "jest-serializer-html-string"
    ]
  }
}
