{
	"name": "preact-realworld-example-app",
	"version": "0.1.2",
	"private": true,
	"type": "module",
	"scripts": {
		"start": "wmr",
		"build": "wmr build --prerender",
		"build:visualize": "wmr build --prerender --visualize",
		"serve": "wmr serve",
		"lint": "eslint '{src,test}/**/*.{ts,tsx}' --fix && prettier '{src,test}/**/*{ts,tsx}' --write",
		"pretest": "rm -rf test/.build && yarn babel:run public --out-dir test/.build/public && yarn babel:run test --out-dir test/.build/test",
		"babel:run": "yarn babel --extensions '.ts','.tsx'",
		"test": "cross-env TZ=America/New_York uvu test",
		"test:coverage": "c8 --include=public yarn test",
		"test:report": "c8 report --reporter=text-lcov > coverage.lcov"
	},
	"alias": {
		"react": "preact/compat",
		"react-dom": "preact/compat"
	},
	"dependencies": {
		"preact": "^10.5.13",
		"preact-iso": "^1.1.0",
		"snarkdown": "^2.0.0",
		"ts-api-toolkit": "^2.0.15",
		"zustand": "^3.4.1"
	},
	"devDependencies": {
		"@babel/cli": "^7.13.14",
		"@babel/core": "^7.13.15",
		"@babel/preset-typescript": "^7.13.0",
		"@testing-library/preact": "^2.0.1",
		"@typescript-eslint/eslint-plugin": "^4.18.0",
		"@typescript-eslint/parser": "^4.18.0",
		"babel-plugin-add-import-extension": "^1.5.1",
		"babel-plugin-transform-jsx-to-htm": "2.1.0",
		"c8": "^7.7.1",
		"cross-env": "^7.0.2",
		"eslint": "^7.22.0",
		"eslint-config-preact": "^1.1.3",
		"husky": "^5.2.0",
		"lint-staged": "^10.5.4",
		"msw": "^0.28.0",
		"node-fetch": "^2.6.1",
		"preact-render-to-string": "^5.1.17",
		"prettier": "^2.2.1",
		"typescript": "^4.2.3",
		"uvu": "^0.5.1",
		"wmr": "^1.5.1"
	},
	"lint-staged": {
		"**/*.{js,jsx,ts,tsx,json}": [
			"prettier --write"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"eslintConfig": {
		"parser": "@typescript-eslint/parser",
		"extends": [
			"preact",
			"plugin:@typescript-eslint/recommended"
		],
		"rules": {
			"@typescript-eslint/explicit-module-boundary-types": "off",
			"@typescript-eslint/no-explicit-any": "off",
			"@typescript-eslint/no-unused-vars": ["warn", { "varsIgnorePattern": "^_.*" }],
			"react/no-danger": "off",
			"jest/expect-expect": "off"
		}
	},
	"prettier": {
		"singleQuote": true,
		"trailingComma": "none",
		"useTabs": true,
		"printWidth": 120,
		"arrowParens": "avoid"
	}
}
